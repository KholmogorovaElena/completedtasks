}
class Mouse {
    String name;
    int height;
    int tail;

    public Mouse(String name, int height, int tail) {
        this.name = name;
        this.height = height;
        this.tail = tail;
    }
}

class Dog {
    String name;
    String color;
    int age;

    public Dog(String name, String color, int age) {
        this.name = name;
        this.color = color;
        this.age = age;
    }
}
class Cat {
    String name;
    String color;
    int age;

    public Cat (String name, String color, int age) {
        this.name = name;
        this.color = color;
        this.age = age;
    }
