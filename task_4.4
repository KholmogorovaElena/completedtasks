
public class Main {
    public static void main(String[] args) {
        Mouse jerryMouse = new Mouse("Jerry", 12, 5);
        Cat tomCat = new Cat ("Tom", "gray with white",15);
        Dog spikeDog = new Dog ("Spike", "gray", 10);
        Cat butchCat = new Cat ("Butch", "black", 17);
        Dog tykeDog = new Dog ("Tyke", "gray", 5);
